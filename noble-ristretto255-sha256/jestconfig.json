{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(src/__test__/.*\\.test\\..*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testEnvironment": "./src/__test-utils__/custom-jest-environment.js",
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 100,
      "lines": 99,
      "statements": 99
    }
  },
  "coveragePathIgnorePatterns": ["node_modules", "__test__", "index.js"],
  "verbose": true
}
